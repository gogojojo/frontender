<% if current_user %>
 <%= current_user.email %>
<% end %>
<% @days.each do |day| %>
  <section>
    <h1> <%= day.date %> </h1>
    <% day.posts.each do |post| %>
    <%= link_to "upvote", upvote_path(:post_id => post.id), :remote => true %>
    <%= link_to "downvote", downvote_path(:post_id => post.id), :remote => true %>
      <div> 
        <%= post.title %>
        <%= post.upvotes %>
      </div>
    <% end %>
  </section>
<% end %>
<% if current_user %>
  <!-- button for logout -->
  <%= link_to "logout", '/logout' %>
<% else %>
  <button id="open_post"> new post</button>
  <button id='open_signup'> Signup </button>
  <button id='open_login'> Login </button>
<% end %>


<div id='post_modal' class ='hidden'>
  <%= form_for Post.new() do |f| %>
    <%= f.text_field :title %>
    <%= f.submit %>
  <% end %>
</div>
<!-- modal for sign up -->
<div id ='user_modal' class='hidden'>
  <%= form_for User.new() do |f| %>

  Name: <%= f.text_field :name %>
  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password %>
  Password Confirmation: <%= f.password_field :password_confirmation %>
  <%= f.submit "Submit" %>

<% end %>
</div>
<!-- modal for login -->
<div id='sessions_modal' class='hidden'>
  <h1>Login</h1>

  <%= form_for :sessions, url:'/login' do |f| %>

  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password %>
  <%= f.submit "Submit" %>

<% end %>
</div>