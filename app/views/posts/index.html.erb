<% @days.each do |day| %>
  <section>
    <h1> <%= day.date %> </h1>
    <% day.posts.each do |post| %>
      <div> 
        <%= post.title %>
      </div>
    <% end %>
  </section>
<% end %>


<div id='form_modal' class ='hidden'>
  <%= form_for Post.new() do |f| %>
    <%= f.text_field :title %>
    <%= f.submit %>
  <% end %>
</div>