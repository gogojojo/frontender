<% @days.each do |day| %>
  <section>
    <h1> <%= day.date %> </h1>
    <% day.posts.each do |post| %>
      <div> 
        <%= post.title %>
      </div>
    <% end %>
  </section>
<% end %>
<button id="open_post"> new post</button>

<div id='post_modal' class ='hidden'>
  <%= form_for Post.new() do |f| %>
    <%= f.text_field :title %>
    <%= f.submit %>
  <% end %>
</div>

<div id ='user_modal'>
  <%= form_for User.new() do |f| %>

  Name: <%= f.text_field :name %>
  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password %>
  Password Confirmation: <%= f.password_field :password_confirmation %>
  <%= f.submit "Submit" %>

<% end %>
</div>

<div id='sessions_modal'>
  <h1>Login</h1>

  <%= form_for Sessions.new() do |f|  %>

    Email: <%= f.text_field :email %>
    Password: <%= f.password_field :password %>
    <%= f.submit %>

  <% end %>
</div>